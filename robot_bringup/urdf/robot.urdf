<robot name="test_robot">
    <link name="base_link" > 
        <visual>
            <origin rpy="0.0 0 0" xyz="0 0 0"/>
            <geometry>
              <mesh filename="file://$(find robot_bringup)/robot_mesh/base_link.dae"/> 
            </geometry>
          </visual>
    </link >

    <link name="link1" >

    </link >

    <link name="link2" >

    </link >

    <link name="link3" >

    </link >
  
