<launch>
    <arg name="name" default="robot"/>
    <arg name="color" default="Grey"/>

    <param name="robot_description" command="$(find xacro)/xacro $(find robot_bringup)/urdf/robot.urdf name:=$(arg name) color:=$(arg color)"/>
  
    <!-- send fake joint values -->
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>
  
    <!-- Combine joint values -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  
    <!-- Show in Rviz   -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find robot_bringup)/config/rviz.rviz"/>
  
  </launch>