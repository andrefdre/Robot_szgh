    <!-- Joints Declaration -->
    <joint name="dummy_joint" type="fixed">
      <parent link="dummy_link"/>
      <child link="base_link"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <joint name="joint1" type="revolute">
      <parent link="base_link"/>
      <child link="link1"/>
      <limit effort="100000.0" lower="${-175*pi/180}" upper="${175*pi/180}" velocity="${60*pi/180}"/>
      <axis xyz="0 0 1" />
      <origin xyz="0 0 0.2645" rpy="0 0 0" />
      <dynamics damping="0.5" friction="0.0"/>
    </joint>
  
    <joint name="joint2" type="revolute">
      <parent link="link1"/>
      <child link="link2"/>
      <limit effort="1000000.0" lower="${-80*pi/180}" upper="${25*pi/180}" velocity="${148*pi/180}"/>
      <axis xyz="0 0 1" />
      <origin xyz="0.21938 0.1675 0.332" rpy="${pi/2} 0 0" />
      <dynamics damping="0.5" friction="0.0"/>
    </joint>
  
    <joint name="joint3" type="revolute">
      <parent link="link2"/>
